<Window x:Class="WorkoutApp.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkoutApp.View"
        xmlns:vm="clr-namespace:WorkoutApp.ViewModel"
        mc:Ignorable="d"
        Title="Poor Yorrick Workouts" Height="450" Width="800">
    <Window.Resources>
        <vm:MainVM x:Key="vm"/>
    </Window.Resources>
    <DockPanel DataContext="{Binding Source={StaticResource vm}}">
        <Menu DockPanel.Dock="Top" Height="20">
            <MenuItem Header="File">
                <MenuItem Header="Add New Exercise"/>
                <Separator/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Options">
                <MenuItem Header="Example"/>
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" 
               Grid.Column="0" 
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch">
                <TextBlock Text="Exercises"
                           FontSize="18"
                           FontWeight="DemiBold"
                           Margin="3"/>
            </Label>
            <ListView ItemsSource="{Binding Exercises}"
                      Grid.Column="0"
                      Grid.Row="1"
                      BorderThickness="0"
                      Margin="2">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ExerciseName}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label Grid.Row="0" 
               Grid.Column="1" 
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch">
                <TextBlock Text="Workouts"
                           FontSize="18"
                           FontWeight="DemiBold"
                           Margin="3"/>
            </Label>
            <Label Grid.Row="0" 
               Grid.Column="2" 
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch">
                <TextBlock Text="{Binding SelectedWorkout.WorkoutName}"
                           FontSize="18"
                           FontWeight="DemiBold"
                           Margin="3"/>
            </Label>
            <ListView ItemsSource="{Binding SelectedWorkout.Stations}" 
                      Grid.Column="2"
                      Grid.Row="1"
                      BorderThickness="0"
                      Margin="2">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Station"
                                       FontWeight="DemiBold"/>
                                <Label Content="{Binding StationId}"
                                       HorizontalContentAlignment="Left"
                                       Padding="0,5"
                                       FontWeight="DemiBold"/>
                            </StackPanel>
                            <ListBox ItemsSource="{Binding Exercises}"
                                     BorderThickness="0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ExerciseName}"
                                                   ToolTip="{Binding Description}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </DataTemplate>                    
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </DockPanel>
</Window>
